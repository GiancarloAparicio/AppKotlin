<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <GridPane style="-fx-background-color: #EEF1FB;" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="15.0" minWidth="15.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" prefWidth="464.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="15.0" minWidth="15.0" prefWidth="11.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="15.0" minHeight="15.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="150.0" minHeight="100.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="15.0" minHeight="15.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <VBox maxHeight="140.0" style="-fx-background-color: #FFFFFF;" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets bottom="5.0" top="10.0" />
               </GridPane.margin>
               <children>
                  <Label maxWidth="1.7976931348623157E308" prefHeight="16.0" prefWidth="583.0" style="-fx-border-color: #FFFFFF #FFFFFF #EEF1FB; -fx-border-width: 2px;" text="Create Order:">
                     <font>
                        <Font name="Carlito Bold" size="20.0" />
                     </font>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Label>
                  <HBox alignment="CENTER" prefHeight="157.0" prefWidth="570.0">
                     <children>
                        <ComboBox fx:id="comboBoxProduct" maxWidth="250.0" nodeOrientation="LEFT_TO_RIGHT" prefWidth="150.0" promptText="Product" style="-fx-background-color: #1BA0EB; -fx-font-weight: bold;">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor></ComboBox>
                        <TextField fx:id="inputQuantity" maxWidth="100.0" minWidth="50.0" onKeyReleased="#setQuantity" promptText="Quantity">
                           <HBox.margin>
                              <Insets left="20.0" right="20.0" />
                           </HBox.margin></TextField>
                        <Button fx:id="buttonAddProduct" maxWidth="150.0" minWidth="100.0" mnemonicParsing="false" style="-fx-background-color: #EBAE1B;" text="Add" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor></Button>
                        <Button fx:id="buttonGenerateOrder" maxWidth="150.0" minWidth="100.0" mnemonicParsing="false" style="-fx-background-color: #2FA14C;" text="Generate order" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="20.0" right="20.0" />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox style="-fx-background-color: white;" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <children>
                  <TableView prefHeight="200.0" prefWidth="200.0" stylesheets="@../../styles/table-view.css">
                    <columns>
                      <TableColumn maxWidth="100.0" minWidth="50.0" prefWidth="75.0" style="-fx-font-weight: bold; -fx-background-color: #1BA0EB;" text="#" />
                      <TableColumn maxWidth="200.0" minWidth="50.0" prefWidth="75.0" style="-fx-background-color: #1BA0EB; -fx-font-weight: bold;" text="Product" />
                        <TableColumn maxWidth="200.0" minWidth="50.0" prefWidth="75.0" style="-fx-background-color: #1BA0EB; -fx-font-weight: bold;" text="Quantity" />
                        <TableColumn maxWidth="200.0" minWidth="50.0" prefWidth="75.0" style="-fx-background-color: #1BA0EB; -fx-font-weight: bold;" text="Price" />
                        <TableColumn maxWidth="200.0" minWidth="50.0" prefWidth="75.0" style="-fx-background-color: #1BA0EB; -fx-font-weight: bold;" text="Total" />
                        <TableColumn maxWidth="200.0" minWidth="50.0" prefWidth="194.0" style="-fx-background-color: #1BA0EB; -fx-font-weight: bold;" text="Actions" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </GridPane>
   </center>
</BorderPane>
